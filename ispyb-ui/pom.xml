	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>

		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.wildfly.plugins</groupId>
				<artifactId>wildfly-maven-plugin</artifactId>
				<version>1.0.2.Final</version>
				<configuration>
					<skip>false</skip>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<!-- specify UTF-8, ISO-8859-1 or any other file encoding -->
					<encoding>UTF-8</encoding>
				</configuration>
			</plugin>

			<!-- plugin to minimify javascript and css -->

			<plugin>
				<groupId>net.alchim31.maven</groupId>
				<artifactId>yuicompressor-maven-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>compress</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<preProcessAggregates>true</preProcessAggregates>
					<aggregations>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<output>${basedir}/src/main/webapp/js/ispyb/min/ispyb-mx.js</output>
							<inputDir>${basedir}/src/main/webapp/js/ispyb/mx</inputDir>
							<includes>
								<include>**/*.js</include>
							</includes>
						</aggregation>
						<aggregation>
							<insertNewLine>true</insertNewLine>
							<output>${basedir}/src/main/webapp/js/ispyb/min/ispyb-bx.js</output>
							<inputDir>${basedir}/src/main/webapp/js/ispyb</inputDir>
							<includes>
								<include>utils/event.js</include>
								<include>biosaxs/graph/genericgraph.js</include>
								<include>biosaxs/widget/dygraphwidget.js</include>
								<include>biosaxs/grid/queuegrid.js</include>
								<include>biosaxs/graph/commons/data/itemgraphformatter.js</include>
								<include>biosaxs/**/*.js</include>
							</includes>
						</aggregation>
					</aggregations>
					<!-- minimize only the aggregated files -->
					<includes>
						<include>js/ispyb/min/**/*.js</include>
					</includes>

					<excludes>
						<exclude>**/*-min.js</exclude>
						<exclude>**/*.min.js</exclude>
					</excludes>

					<nosuffix>false</nosuffix>
					<jswarn>false</jswarn>
				</configuration>
			</plugin>
			<!-- plugin to run ant task xdoclet to generate strutsXXX.xml files in 
				WEB-INF -->
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<configuration>
							<tasks>
								<echo message="xdoclet.home = ${xdoclet.home}" />
								<path id="xdoclet.client.path">
									<fileset dir="${xdoclet.home}">
										<include name="*.jar" />
									</fileset>
									<fileset dir="${common.lib.dir}">
										<include name="*.jar" />
									</fileset>
 									<pathelement location="${jboss.modules.base}/javax/servlet/api/main/jboss-servlet-api_3.1_spec-1.0.0.Final.jar" /> 
								</path>
<echo message="user.home: ${jboss.modules.base}/javax/servlet/api/main/jboss-servlet-api_3.1_spec-1.0.0.Final.jar" />
								<echo message="user.home: ${xdoclet.client.path}" />
								<echo message="java src:  ${basedir}/src/main/java}" />
								<taskdef name="webdoclet" classname="xdoclet.modules.web.WebDocletTask"
									classpathref="xdoclet.client.path" />

								<webdoclet destdir="${webinf.dir}"
									mergeDir="${basedir}/src/main/webapp/mergedir" verbose="true"
									excludedtags="@version,@author">
									<fileset dir="${basedir}/src/main/java">
										<include name="**/*.java" />
										<exclude name="**/uk/ac/ehtpx/**" />
									</fileset>

									<deploymentdescriptor servletspec="2.3"
										validatexml="true" destdir="${webinf.dir}" distributable="false" />

									<strutsconfigxml version="1.2" destdir="${webinf.dir}" />
									<strutsvalidationxml destdir="${webinf.dir}" />
									<jbosswebxml destdir="${webinf.dir}" />

								</webdoclet>

							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

